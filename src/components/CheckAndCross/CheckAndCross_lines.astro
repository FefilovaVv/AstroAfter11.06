---
import { Props } from "astro";
const { textH4 = "" } = Astro.props as Props;
const { textH5 = "" } = Astro.props as Props;
const { textP = "" } = Astro.props as Props;
const { imgSrcOption1 = "" } = Astro.props as Props;
const { imgSrcOption2 = "" } = Astro.props as Props;
const { imgAltOption1 = "" } = Astro.props as Props;
const { imgAltOption2 = "" } = Astro.props as Props;
---

<style>
    .wrap_line {
        border-bottom: 2px solid #e8e8e8;
        padding: 25px 0 5px 0;
    }
    .flexWrap_h1_img {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    h4 {
        margin: 0;
        font-size: 1.5rem;
        word-break: break-all;
        font-weight: 400;
    }
    h5 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 200;
        letter-spacing: 1px;
    }
    .wrap_img {
        min-width: 210px;
    }
    img {
        width: 30px;
        height: 30px;
        padding: 0 60px 0 60px;
    }
    p {
        font-size: 1.2rem;
        line-height: 1.5rem;
        color: #858585;
        width: 500px;
        font-weight: lighter;
        letter-spacing: 1px;
    }
    @media (min-width: 0px) and (max-width: 1100px) {
        img {
            padding: 0 50px;
        }
        h4 {
            display: inline;
            margin: 0;
            font-size: 1.4rem;
        }
        p {
            font-size: 1rem;
            width: auto;
        }
        h5{font-size: 1.1rem;}
    }
    @media (min-width: 0px) and (max-width: 700px) {
        img {
            padding: 0 35px;
        }
        h4 {
            display: inline;
            margin: 0;
            font-size: 1.2rem;
        }
        h5{font-size: 0.9rem;}
    }
</style>

<div class="wrap_line">
    <div class="flexWrap_h1_img">
        <div class="wrap_h">
            <h4>{textH4}</h4>
            <h5>{textH5}</h5>
        </div>
        <div class="wrap_img">
            <img class="option1" src={imgSrcOption1} alt={imgAltOption1} />
            <img class="option2" src={imgSrcOption2} alt={imgAltOption2} />
        </div>
    </div>
    <p>{textP}</p>
</div>
